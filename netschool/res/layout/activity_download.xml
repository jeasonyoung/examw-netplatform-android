<?xml version="1.0" encoding="utf-8"?>
<!-- 下载课程资源 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:gravity="center_horizontal"
    android:background="@color/ashen2"  
    android:orientation="vertical">
    
    <!-- 顶部标题布局 -->
   	<RelativeLayout 
   	    android:layout_width="match_parent" 
   	    android:layout_height="50dp"
   	    android:paddingTop="5dp"
   	    android:background="@drawable/main_top_bg_img">
   	    
   	    <!-- 返回按钮 -->
   	    <ImageButton android:id="@+id/btnReturn"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_marginLeft="10dp"
   	        android:layout_marginStart="10dp"
   	        android:layout_alignParentLeft="true"
   	        android:layout_alignParentStart="true"
   	        android:layout_centerVertical="true"
   	        android:background="@color/none"
   	        android:scaleType="centerCrop"
   	        android:src="@drawable/btn_return_bg_img"
   	        android:contentDescription="@string/back"/>
   	    
   	    <!-- 标题 -->
   	     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:fadingEdge="vertical"
            android:gravity="center"
            android:text="@string/DownloadLab"
            android:textColor="@color/white"
            android:textSize="@dimen/title_huge_size" />
   	     
   	</RelativeLayout>
   	
   	<!-- 分栏布局 -->
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:gravity="center_horizontal"
   	    android:orientation="vertical">
   	    
   	    <!-- 选项卡 -->
   	    <RadioGroup android:id="@+id/downRadioGroup"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:orientation="horizontal">
   	        
   	        <!-- 下载中 -->
   	        <RadioButton android:id="@+id/btnDowning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/tabhost_bj2"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/DowningLab"
                android:textColor="@color/black" />

   	        <!-- 下载完成 -->
            <RadioButton android:id="@+id/btnDownFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/tabhost_bj2"
                android:button="@null"
                android:gravity="center"
                android:text="@string/DownfinishLab"
                android:textColor="@color/black" />
   	    </RadioGroup>
   	    
   	    <!-- viewPaper -->
   	    <android.support.v4.view.ViewPager android:id="@+id/downloadPagers"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent">
   	        
   	   </android.support.v4.view.ViewPager>
   	    
   	</LinearLayout>
</LinearLayout>