<?xml version="1.0" encoding="utf-8"?>
<!-- 下载中列表 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 没有数据 -->
    <LinearLayout android:id="@+id/download_downing_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" 
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/down_nodata"
                android:contentDescription="@string/download_nodata_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downnodataStr"
                android:textSize="@dimen/text_small_size" 
                />
        </LinearLayout>
    
    <!-- 下载中列表 -->
    <ListView android:id="@+id/download_listview_downing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </ListView>

</LinearLayout>