<?xml version="1.0" encoding="utf-8"?>
<!-- 意见反馈布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ashen"
    android:orientation="vertical" >
    
   <!-- top  -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_banner_height"
        android:background="@drawable/main_top_bg_img">
        
        <!-- 返回 -->
        <ImageButton android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_btn_return_height"
            android:layout_marginLeft="@dimen/top_btn_return_left"
            android:layout_marginStart="@dimen/top_btn_return_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_return_bg_img"
            android:contentDescription="@string/btn_return_desc" />
        
        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:fadingEdge="vertical"
            android:gravity="center"
            android:text="@string/suggest_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_huge_size" />
        
    </RelativeLayout>
    
    <!-- 内容 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp">
        
        <!-- 学员 -->
        <LinearLayout android:id="@+id/suggest_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/suggest_student_name_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size" />

            <TextView android:id="@+id/txt_suggest_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_medium_size" 
                android:text="@string/commonNickname" />
        </LinearLayout>
        
        <!-- 输入框 -->
        <EditText  android:id="@+id/txt_suggest_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/suggest_username"
            android:layout_above="@+id/btn_suggest_submit"
            android:background="@drawable/whitetext_bg1"
            android:gravity="top"
            android:hint="@string/suggest_content_hint"
            android:maxLines="8"
            android:minLines="5"
            android:padding="5.0dp"
            android:textSize="@dimen/text_small_size" />
        
        <!-- 提交按钮 -->
        <Button android:id="@+id/btn_suggest_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/submit_suggestion_btn1_bg"
            android:text="@string/btn_suggest_submit_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_size" />
        
    </RelativeLayout>
</LinearLayout>