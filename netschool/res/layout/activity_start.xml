<?xml version="1.0" encoding="utf-8"?>
<!-- 启动activity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    android:gravity="fill_vertical" >

    <!-- logo 图片 -->
    <ImageView
        android:layout_width="@dimen/start_login_width"
        android:layout_height="@dimen/start_login_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/start_login_top"
        android:layout_marginLeft="@dimen/start_login_left"
        android:layout_marginStart="@dimen/start_login_left"
        android:src="@drawable/start_logo"
        android:contentDescription="@string/start_logo_desc"/>
    
</RelativeLayout>