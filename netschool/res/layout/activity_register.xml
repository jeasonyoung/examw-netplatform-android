    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/reg_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_button_img"
            android:checked="true"
            android:text="@string/reg_readCheakStr"
            android:textColor="@color/black"
            android:textSize="@dimen/title_small_size" />

        <Button
            android:id="@+id/reg_treatyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/none"
            android:text="@string/reg_treatyStr"
            android:textColor="@color/blue"
            android:textSize="@dimen/title_small_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="10.0dip" >

        <Button
            android:id="@+id/reg_submitBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/submit_suggestion_btn1_bg"
            android:text="@string/reg_subStr"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_size" />
    </LinearLayout>

</LinearLayout>
