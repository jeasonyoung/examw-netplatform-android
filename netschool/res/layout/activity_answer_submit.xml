<?xml version="1.0" encoding="utf-8"?>
<!-- 答疑提交Activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_bg"
    android:orientation="vertical" >
    
    <!-- top  -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_top_bg_img">
        
        <!-- 返回 -->
        <ImageButton android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_return_bg_img"
            android:contentDescription="@string/btn_return_desc" />
        
        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:fadingEdge="vertical"
            android:gravity="center"
            android:text="@string/answer_submit_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_huge_size" />
        
    </RelativeLayout>
    
    <!-- 输入 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp">
        
        <!-- 套餐/班级 -->
        <TableRow android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_submit_class"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large_size" />
             
            <Spinner android:id="@+id/ddl_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            
        </TableRow>
        
        <!-- 课程资源 -->
        <TableRow android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_submit_lesson"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large_size" />

            <Spinner android:id="@+id/ddl_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            
        </TableRow>
        
        <!-- 标题 -->
        <TableRow android:gravity="center_vertical">
 
             <!-- 标题 -->
             <EditText android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/whitetext_bg"
                android:hint="@string/answer_submit_topic_title_desc"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textSize="@dimen/text_large_size" />
            
        </TableRow>
        
    </TableLayout>
    
    <!-- 内容 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent">
        
        <!-- 内容 -->
        <EditText android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_submit"
                android:singleLine="false"             
                android:background="@drawable/whitetext_bg"
                android:hint="@string/answer_submit_topic_content_desc"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:textSize="@dimen/text_large_size" />
        
         <!-- 提交按钮 -->
         <Button android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/submit_suggestion_btn1_bg"
            android:text="@string/btn_answer_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_size" />
        
    </RelativeLayout>
</LinearLayout>