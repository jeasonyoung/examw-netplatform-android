<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar" />
    <!-- 登录－输入框 -->
    <style name="login_input" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">false</item>
    </style>
    <!-- 我的课程－课程资源－数据项样式 -->
    <style name="my_course_lesson_item_text">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
    </style>
    <!-- 播放器－视频控制栏－进度条 -->
    <style name="progress_bar_video" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@*android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:minHeight">5.0dip</item>
    </style>
    <style name="AnimationFade">
    	<item name="android:windowEnterAnimation">@anim/fade_in</item>
    	<item name="android:windowExitAnimation">@anim/fade_out</item>
	</style>
    <!-- 播放器－音频控制栏－音量进度条 -->
    <style name="progress_bar_vol" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@*android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:minHeight">5.0dip</item>
    </style>
    <!-- 免费体验－搜索框 -->
    <style name="free_experience_search">
        <item name="android:background">@drawable/free_experience_search_text</item>
    </style>
    <!-- 免费体验－课程资源－标题样式 -->
    <style name="free_experience_lesson_item_title">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
    </style>
    
</resources>